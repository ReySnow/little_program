@import "../movie-template/movie-template.wxss";

.movie-list-container{
  background-color: #fff;
  display: flex;
  flex-direction: column; 
}

.inner-container{
  margin: 0 auto 22rpx;
}

.movie-head{
  padding: 30rpx 20rpx 22rpx;
}

.slogan{
  font-size: 24rpx;
}

.more{
  float: right;
}

.more-text{
  vertical-align: middle;
  
  color: #1f4ba5;
}

.more-img{
  width: 41rpx;
  height: 41rpx;
  vertical-align: middle;
  margin-left: 5rpx;
}

.movies-container{
  display: flex;
  flex-direction: row;
}